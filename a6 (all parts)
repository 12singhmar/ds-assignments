#include <iostream>
using namespace std;

// Q1
struct Node {
    int data;
    Node* next;
    Node* prev;
};

// Circular Linked List
class CircularLinkedList {
    Node* head;
public:
    CircularLinkedList() { head = NULL; }

    void insertFirst(int val) {
        Node* n = new Node;
        n->data = val;
        if (head == NULL) {
            head = n;
            n->next = head;
        } else {
            Node* temp = head;
            while (temp->next != head) temp = temp->next;
            n->next = head;
            temp->next = n;
            head = n;
        }
    }

    void insertLast(int val) {
        Node* n = new Node;
        n->data = val;
        if (head == NULL) {
            head = n;
            n->next = head;
        } else {
            Node* temp = head;
            while (temp->next != head) temp = temp->next;
            temp->next = n;
            n->next = head;
        }
    }

    void insertAfter(int key, int val) {
        if (head == NULL) return;
        Node* temp = head;
        do {
            if (temp->data == key) {
                Node* n = new Node;
                n->data = val;
                n->next = temp->next;
                temp->next = n;
                return;
            }
            temp = temp->next;
        } while (temp != head);
    }

    void insertBefore(int key, int val) {
        if (head == NULL) return;
        Node* prev = NULL;
        Node* curr = head;
        do {
            if (curr->data == key) {
                Node* n = new Node;
                n->data = val;
                if (curr == head) {
                    Node* temp = head;
                    while (temp->next != head) temp = temp->next;
                    temp->next = n;
                    n->next = head;
                    head = n;
                } else {
                    n->next = curr;
                    prev->next = n;
                }
                return;
            }
            prev = curr;
            curr = curr->next;
        } while (curr != head);
    }

    void deleteNode(int val) {
        if (head == NULL) return;
        Node* curr = head;
        Node* prev = NULL;
        do {
            if (curr->data == val) {
                if (curr == head && curr->next == head) {
                    delete curr;
                    head = NULL;
                    return;
                }
                if (curr == head) {
                    Node* temp = head;
                    while (temp->next != head) temp = temp->next;
                    temp->next = head->next;
                    head = head->next;
                    delete curr;
                } else {
                    prev->next = curr->next;
                    delete curr;
                }
                return;
            }
            prev = curr;
            curr = curr->next;
        } while (curr != head);
    }

    void search(int val) {
        if (head == NULL) {
            cout << "Not Found\n";
            return;
        }
        Node* temp = head;
        do {
            if (temp->data == val) {
                cout << "Found\n";
                return;
            }
            temp = temp->next;
        } while (temp != head);
        cout << "Not Found\n";
    }

    void display() {
        if (head == NULL) return;
        Node* temp = head;
        do {
            cout << temp->data << " ";
            temp = temp->next;
        } while (temp != head);
        cout << "\n";
    }
};

// Doubly Linked List
class DoublyLinkedList {
    Node* head;
public:
    DoublyLinkedList() { head = NULL; }

    void insertFirst(int val) {
        Node* n = new Node;
        n->data = val;
        n->prev = NULL;
        n->next = head;
        if (head != NULL) head->prev = n;
        head = n;
    }

    void insertLast(int val) {
        Node* n = new Node;
        n->data = val;
        n->next = NULL;
        if (head == NULL) {
            n->prev = NULL;
            head = n;
            return;
        }
        Node* temp = head;
        while (temp->next != NULL) temp = temp->next;
        temp->next = n;
        n->prev = temp;
    }

    void insertAfter(int key, int val) {
        Node* temp = head;
        while (temp != NULL) {
            if (temp->data == key) {
                Node* n = new Node;
                n->data = val;
                n->next = temp->next;
                if (temp->next) temp->next->prev = n;
                n->prev = temp;
                temp->next = n;
                return;
            }
            temp = temp->next;
        }
    }

    void insertBefore(int key, int val) {
        Node* temp = head;
        while (temp != NULL) {
            if (temp->data == key) {
                Node* n = new Node;
                n->data = val;
                n->prev = temp->prev;
                n->next = temp;
                if (temp->prev) temp->prev->next = n;
                else head = n;
                temp->prev = n;
                return;
            }
            temp = temp->next;
        }
    }

    void deleteNode(int val) {
        Node* temp = head;
        while (temp != NULL) {
            if (temp->data == val) {
                if (temp->prev) temp->prev->next = temp->next;
                else head = temp->next;
                if (temp->next) temp->next->prev = temp->prev;
                delete temp;
                return;
            }
            temp = temp->next;
        }
    }

    void search(int val) {
        Node* temp = head;
        while (temp != NULL) {
            if (temp->data == val) {
                cout << "Found\n";
                return;
            }
            temp = temp->next;
        }
        cout << "Not Found\n";
    }

    void display() {
        Node* temp = head;
        while (temp != NULL) {
            cout << temp->data << " ";
            temp = temp->next;
        }
        cout << "\n";
    }
};

// -----------------------------------------------

// Q2
class CircularDisplay : public CircularLinkedList {
public:
    void displayCircular() {
        if (head == NULL) return;
        Node* temp = head;
        do {
            cout << temp->data << " ";
            temp = temp->next;
        } while (temp != head);
        cout << head->data << "\n";
    }
};

// -----------------------------------------------

// Q3
class SizeFinder {
public:
    int sizeDoubly(Node* head) {
        int count = 0;
        while (head != NULL) {
            count++;
            head = head->next;
        }
        return count;
    }

    int sizeCircular(Node* head) {
        if (head == NULL) return 0;
        int count = 0;
        Node* temp = head;
        do {
            count++;
            temp = temp->next;
        } while (temp != head);
        return count;
    }
};

// -----------------------------------------------

// Q4
class PalindromeChecker {
public:
    bool isPalindrome(Node* head) {
        if (head == NULL) return true;
        Node* left = head;
        Node* right = head;
        while (right->next != NULL) right = right->next;
        while (left != right && right->next != left) {
            if (left->data != right->data) return false;
            left = left->next;
            right = right->prev;
        }
        return true;
    }
};

// -----------------------------------------------

// Q5
class CircularCheck {
public:
    bool isCircular(Node* head) {
        if (head == NULL) return false;
        Node* temp = head->next;
        while (temp != NULL && temp != head) temp = temp->next;
        return temp == head;
    }
};
